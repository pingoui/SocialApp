<?xml version="1.0" encoding="utf-8"?>


        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/fragment_quads_icon"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:clickable="true"
                                    android:src="@drawable/drone_icon"
                                    android:tag="1" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3"
                                    android:textSize="20sp"
                                    android:paddingTop="20dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/fragment_post_icon"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:clickable="true"
                                    android:src="@drawable/posts" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="34"
                                    android:textSize="20sp"
                                    android:paddingTop="20dp"/>
                        </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            >

                                <ImageView
                                    android:id="@+id/fragment_geo_icon"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:clickable="true"
                                    android:src="@drawable/geo" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1"
                                    android:textSize="20sp"
                                    android:paddingTop="20dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            >

                                <ImageView
                                    android:id="@+id/fragment_commons_icon"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:background="#00000000"
                                    android:clickable="true"
                                    android:src="@drawable/commons" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="25dp"
                                    android:textSize="20sp"
                                    android:text="17" />
                        </LinearLayout>
                </LinearLayout>

        </LinearLayout>

